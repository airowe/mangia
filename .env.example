# Clerk Authentication
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key

# API Backend
EXPO_PUBLIC_API_URL=https://mangia-api.vercel.app

# RevenueCat Configuration
EXPO_PUBLIC_REVENUECAT_API_KEY_IOS=appl_your_ios_key
EXPO_PUBLIC_REVENUECAT_API_KEY_ANDROID=goog_your_android_key

# Optional: Firecrawl for recipe URL scraping
EXPO_PUBLIC_FIRECRAWL_API_KEY=your-firecrawl-key

# Cloudflare Workers AI (FREE - recommended for recipe extraction)
# Get account ID from URL: dash.cloudflare.com/<ACCOUNT_ID>/ai/workers-ai
# Create token: https://dash.cloudflare.com/profile/api-tokens (needs "Workers AI: Read" permission)
EXPO_PUBLIC_CLOUDFLARE_ACCOUNT_ID=your-account-id
EXPO_PUBLIC_CLOUDFLARE_API_TOKEN=your-api-token

# Gemini API (fallback if Cloudflare not configured, ~$0.10/1K extractions)
# Get key at: https://aistudio.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=your-gemini-api-key

# RapidAPI (for TikTok/YouTube transcript extraction)
# Get key at: https://rapidapi.com/hub
# Subscribe to: tiktok-video-no-watermark2, youtube-transcripts
EXPO_PUBLIC_RAPIDAPI_KEY=your-rapidapi-key
