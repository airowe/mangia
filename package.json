{
  "name": "mangia-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:mobile": "turbo run dev --filter=@mangia/mobile",
    "dev:api": "turbo run dev --filter=@mangia/api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "start:mobile": "pnpm --filter @mangia/mobile start",
    "ios": "pnpm --filter @mangia/mobile ios",
    "android": "pnpm --filter @mangia/mobile android"
  },
  "devDependencies": {
    "turbo": "^2.5.0",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.6.5"
}
